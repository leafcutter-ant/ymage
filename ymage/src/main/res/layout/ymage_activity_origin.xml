<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#333333"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ymage_origin_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:text="返回"
            android:gravity="center"/>
        <View
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/ymage_origin_pick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="#FFFFFF"
            android:drawableStart="@drawable/ymage_origin_chosen"
            android:textSize="15sp"
            android:drawablePadding="3dp"
            android:text="选择"
            android:gravity="center"/>
        <TextView
            android:id="@+id/ymage_origin_finish"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:text="完成"
            android:gravity="center"/>
    </LinearLayout>
    <com.yitimo.ymage.OriginPager
        android:id="@+id/ymage_origin_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>