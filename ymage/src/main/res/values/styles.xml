<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Ymage.Default" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorDefault">#333333</item>
        <item name="colorPrimary">#CD5C5C</item>
        <item name="colorPrimaryA">#CCCD5C5C</item>
        <item name="colorPrimaryDark">#333333</item>
        <item name="colorFont">#FFFFFF</item>
        <item name="colorDefault2">#000000</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">#333333</item>
    </style>

    <style name="Ymage.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorDefault">#FFFFFF</item>
        <item name="colorPrimary">#CD5C5C</item>
        <item name="colorPrimaryA">#CCCD5C5C</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorFont">#4F4F4F</item>
        <item name="colorDefault2">#F3F3F3</item>
        <item name="android:statusBarColor" tools:targetApi="m">#FFFFFF</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="activity_transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="YmageBrowser" parent="@style/activity_transparent">
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/browser_in</item>
        <item name="android:windowExitAnimation">@anim/browser_out</item>
    </style>
</resources>