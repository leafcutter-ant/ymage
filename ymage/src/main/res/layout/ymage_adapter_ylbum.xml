<LinearLayout android:layout_height="70dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="@dimen/dimenMini"
    android:paddingEnd="@dimen/dimenSpace"
    android:background="?colorDefault2">
    <ImageView
        android:id="@+id/adapter_album_cover"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="?colorDefault"
        android:contentDescription="@null"
        android:scaleType="center"/>
    <TextView
        android:id="@+id/adapter_album_name"
        android:layout_marginStart="@dimen/dimenSpace"
        android:maxWidth="120dp"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?colorFont"
        android:textSize="@dimen/dimenFontL"/>
    <TextView
        android:id="@+id/adapter_album_size"
        android:layout_marginStart="@dimen/dimenSpace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?colorFont"
        android:textSize="@dimen/dimenFontL"/>
</LinearLayout>